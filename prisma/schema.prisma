// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id          Int     @id @default(autoincrement())
  title       String
  price       Float
  description String
  category    String
  image       String?
  rating      rating? @relation(fields: [ratingId], references: [id])
  ratingId    Int?
}

model rating {
  id      Int       @id @default(autoincrement())
  rate    Float
  count   Int
  product product[]
}
